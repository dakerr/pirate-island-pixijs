{
  "name": "pirate-island",
  "version": "1.0.0",
  "description": "A simple drop-n-catch game made with PixiJS",
  "repository": "https://github.com/dakerr/pirate-island-pixijs.git",
  "author": "Dave Kerr <dakerr@outlook.com>",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "yarn build-assets && vite --open",
    "build": "yarn build-assets && tsc && vite build",
    "build-assets": "assetpack",
    "lint": "eslint --ext .js,.ts,.tsx src",
    "lint:fix": "eslint --ext .js,.ts,.tsx src --fix",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@pixi/sound": "^5.0.0",
    "@pixi/ui": "^0.5.6",
    "firebase": "^10.1.0",
    "gsap": "^3.11.4",
    "pixi-filters": "^5.1.1",
    "pixi-text-input": "^1.0.6",
    "pixi.js": "^7.1.2",
    "typed-signals": "^2.5.0"
  },
  "devDependencies": {
    "@assetpack/cli": "^0.7.0",
    "@assetpack/core": "^0.7.0",
    "@assetpack/plugin-compress": "~0.3.4",
    "@assetpack/plugin-ffmpeg": "~0.3.4",
    "@assetpack/plugin-json": "~0.3.4",
    "@assetpack/plugin-manifest": "~0.3.4",
    "@assetpack/plugin-mipmap": "~0.3.4",
    "@assetpack/plugin-texture-packer": "~0.3.4",
    "@assetpack/plugin-webfont": "~0.3.4",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "prettier": "^2.8.3",
    "typescript": "^5.1.6",
    "vite": "^4.0.0"
  }
}
